<% provide :title, t(".home_title") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t ".home_description_title" %></h1>
    <h2>
      <%= t(".home_description_detail_html", link: link_to(t(".ruby_on_rails"), Settings.link.static_pages.home.link_ruby_on_rails)) %>
    </h2>
    <%= link_to t(".signup"), signup_path(locale), class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag("rails.png", alt: "Rails logo",
    width: Settings.variables.static_pages.home.image_width),
    Settings.link.static_pages.home.link_ruby_on_rails %>
<% end %>
